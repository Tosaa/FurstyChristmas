<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drill"
            type="redtoss.example.furstychristmas.domain.workout.model.Drill" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            style="@style/ExerciseCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="3dp"
                android:paddingHorizontal="5dp">
                <!-- do not show muscles (06.11.2021)-->
                <!--
                <ImageView
                    icon="@{drill.exercise.muscles.iterator().next().icon}"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    app:tint="@color/black" />
                -->
                <!--
                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="2dp"
                    android:background="?android:attr/listDivider" />
-->

                <com.google.android.material.textview.MaterialTextView
                    style="@style/AppTheme.Custom.Card.Repetition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{drill.repetition.formattedString()}"
                    tools:text="50 Wdh/Seite" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/AppTheme.Custom.Card.Exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:text="@{drill.exercise.exerciseName}"
                    tools:text="Lunges with Arm Rotation" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>