<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.example.furstychrismas.screen.day.WorkoutViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <include
            android:id="@+id/reps"
            layout="@layout/set_reps"
            sets="@{viewmodel.reps}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin"
            />

        <include
            android:id="@+id/time"
            layout="@layout/workout_duration"
            time="@{viewmodel.workoutDuration}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/main_margin"
            >

            <TextView
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{viewmodel.day.toString()}"
                android:textColor="@color/white"
                android:textSize="@dimen/header"
                android:visibility="visible"
                android:textStyle="bold"
                tools:text="1" />

            <TextView
                android:id="@+id/day_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:text="@{viewmodel.cal.toString()}"
                android:textColor="@color/white"
                android:textSize="@dimen/info"
                android:visibility="visible"
                tools:text="Monday" />
            <TextView
                android:id="@+id/motto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:text="@{viewmodel.motto}"
                android:textColor="@color/white"
                android:textSize="@dimen/info"
                android:visibility="visible"
                tools:text="Legs" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/muscle_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/main_margin"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:itemCount="4"
            tools:listitem="@layout/muscle_icon"
            />
    </LinearLayout>
</layout>